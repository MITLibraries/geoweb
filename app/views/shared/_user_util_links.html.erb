<ul class="navbar-nav">
  <%= render_nav_actions do |config, action|%>
    <li class="nav-item"><%= action %></li>
  <% end %>
  <% if has_user_authentication_provider? %>
    <% if current_user %>
      <li class="nav-item">
        <%= link_to t('blacklight.header_links.logout'),
                      destroy_user_session_path, method: :delete, class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item">
        <% if ENV['AUTH_TYPE'] == 'developer' %>

          <%= link_to t('blacklight.header_links.login'),
                        user_developer_omniauth_authorize_path, class: "nav-link" %>

        <% elsif ENV['AUTH_TYPE'] == 'saml' %>

        <%= link_to t('blacklight.header_links.login'),
                      user_saml_omniauth_authorize_path, class: "nav-link" %>

        <% else %>

          <%= link_to t('blacklight.header_links.login'),
                        user_shibboleth_omniauth_authorize_path, class: "nav-link" %>

        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
