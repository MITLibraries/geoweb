<nav id="header-navbar" class="navbar navbar-expand-md navbar-dark" role="navigation">
  <div class="<%= container_classes %>">
    <%= link_to root_path, class: 'mb-0 navbar-brand' do %>
      <%= image_tag "logo.png", alt: "MIT Geoweb logo" %>
    <% end %>
    <button type="button" class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#user-util-collapse" aria-controls="user-util-collapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-end" id="user-util-collapse">
      <%= render 'shared/user_util_links' %>
    </div>
  </div>
</nav>

<% if controller_name == 'catalog' %>
  <div id="search-navbar" class="navbar-search navbar-expand-md navbar-light py-3" role="navigation">
    <div class="<%= container_classes %>">
      <div class="row justify-content-md-center">
        <%= render_search_bar  %>
      </div>
    </div>
  </div>
<% end %>
